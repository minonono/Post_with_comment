제목: <%= @show_form.title %> <br>
작성자: <%= @show_form.editor %> <br>
내용: <%= @show_form.content %> <br>
<a href='/posts/edit/<%= @show_form.id %>'>[수정]</a>
<a href='/posts/destroy/<%= @show_form.id %>'>[삭제]</a>

<div>
<% @show_replies.each do |reply| %>
    댓글번호: <%= reply.id %> <br>
    작성자: <%= reply.editor %> <br>
    내용:   <%= reply.content %>
    <a href="/reply/destroy/<%= reply.id %>">삭제</a> <br>
<% end %>
</div>

<div class="container">
    <h3>댓글</h3>
    <form action='/reply/create' method="POST">
      <div class="form-group">
        <input type="hidden" name="p_id" class="form-control" id="exampleInputPassword1" value=<%= @show_form.id %> >
      </div>
      
      <div class="form-group">
        <label for="exampleInputPassword1">editor</label>
        <input type="text" name="editor" class="form-control" id="exampleInputPassword1" placeholder="editor">
      </div>
      <div class="form-group">
          <label for="comment">content:</label>
          <textarea class="form-control" name="content" rows="3" id="comment"></textarea>
        </div>              
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>